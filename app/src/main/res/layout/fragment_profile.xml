<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/card_layout">

       <RelativeLayout
           android:layout_width="match_parent"
           android:padding="8dp"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Profile"
               android:textColor="@color/black"
               android:textStyle="bold"
               />

           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/profile_pic"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="50dp"
               android:src="@drawable/contact"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="UserName"
               android:layout_below="@+id/profile_pic"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="15dp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:id="@+id/username"
               android:textSize="18sp"
               />
       </RelativeLayout>

   </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_layout"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="74dp"
        android:textSize="20sp"
        android:text="Username:"
        android:id="@+id/standard_username"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_layout"
        android:layout_toRightOf="@+id/standard_username"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="username"
        android:id="@+id/display_username"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/standard_username"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="74dp"
        android:textSize="20sp"
        android:text="Email:"
        android:id="@+id/standard_email"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_username"
        android:layout_toRightOf="@+id/standard_email"
        android:text="email"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:textSize="20sp"
        android:id="@+id/display_email"
        />

</RelativeLayout>